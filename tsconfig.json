{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "src/features/auto-loader.js",
    "src/features/share.js",
    "src/privacy/pipeline.js",
    "src/ui/modal.js",
    "src/ui/panel-interactions.js",
    "src/ui/panel-visibility.js",
    "src/ui/state-view.js",
    "src/ui/panel-shortcuts.js",
    "src/core/state.ts",
    "src/core/error-handler.ts",
    "src/core/export-range.ts",
    "src/core/message-indexer.ts",
    "src/core/turn-bookmarks.ts",
    "src/core/bookmark-listener.js",
    "types/**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
