{
  "name": "genit-memory-helper",
  "version": "2.1.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "sync:version": "node scripts/sync-version.js",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run typecheck && USE_ROLLUP=1 npm run build",
    "test": "vitest --run tests/unit --pool=threads --maxWorkers=1 --minWorkers=1",
    "test:unit": "vitest --run",
    "test:smoke": "playwright test",
    "fingerprint": "node scripts/fingerprint.js",
    "version": "npm run sync:version && USE_ROLLUP=1 npm run build && git add genit-memory-helper.user.js package.json package-lock.json",
    "bump:patch": "npm version patch && git push --follow-tags",
    "bump:minor": "npm version minor && git push --follow-tags",
    "bump:major": "npm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.11.30",
    "jsdom": "^24.0.0",
    "playwright": "^1.47.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  }
}
